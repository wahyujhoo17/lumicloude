// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id              String         @id @default(cuid())
  email           String         @unique
  password        String
  name            String
  phone           String?
  emailVerified   Boolean        @default(false)
  otp             String?
  otpExpiry       DateTime?
  otpAttempts     Int            @default(0)
  otpBlockedUntil DateTime?
  resetToken      String?
  resetTokenExpiry DateTime?
  createdAt       DateTime       @default(now())
  updatedAt       DateTime       @updatedAt
  orders          Order[]
  subscriptions   Subscription[]
  websites        Website[]
}

model Plan {
  id          String       @id @default(cuid())
  name        String       @unique
  displayName String
  description String
  type        PlanType     // 'hosting' atau 'vps'
  price       Int          // harga per bulan dalam rupiah
  storage     String       // contoh: "500 MB", "3 GB", "Unlimited"
  bandwidth   String       // contoh: "5 GB", "Unlimited"
  websites    String       // contoh: "1", "5", "Unlimited"
  features    PlanFeature[]
  orders      Order[]
  isActive    Boolean      @default(true)
  isPopular   Boolean      @default(false)
  isSoldOut   Boolean      @default(false)
  sortOrder   Int          @default(0)
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
}

model PlanFeature {
  id          String   @id @default(cuid())
  planId      String
  plan        Plan     @relation(fields: [planId], references: [id], onDelete: Cascade)
  name        String   // nama fitur
  description String?  // deskripsi fitur (opsional)
  isIncluded  Boolean  @default(true)
  sortOrder   Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Order {
  id              String        @id @default(cuid())
  userId          String
  user            User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  planId          String?       // optional untuk backward compatibility
  plan            Plan?         @relation(fields: [planId], references: [id])
  planName        String
  planType        String        // 'hosting' atau 'vps'
  price           Int           // dalam rupiah
  duration        Int           @default(1) // dalam bulan
  status          OrderStatus   @default(PENDING)
  paymentMethod   String?
  paymentId       String?       @unique // iPaymu transaction ID
  paymentUrl      String?       // iPaymu payment URL
  paidAt          DateTime?
  expiresAt       DateTime?
  metadata        Json?         // data tambahan (domain, specs, dll)
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt
  subscription    Subscription?
}

model Subscription {
  id              String             @id @default(cuid())
  userId          String
  user            User               @relation(fields: [userId], references: [id], onDelete: Cascade)
  orderId         String             @unique
  order           Order              @relation(fields: [orderId], references: [id])
  planName        String
  planType        String
  status          SubscriptionStatus @default(ACTIVE)
  startDate       DateTime           @default(now())
  endDate         DateTime
  autoRenew       Boolean            @default(true)
  createdAt       DateTime           @default(now())
  updatedAt       DateTime           @updatedAt
  website         Website?
}

model Website {
  id             String       @id @default(cuid())
  userId         String
  user           User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  subscriptionId String       @unique
  subscription   Subscription @relation(fields: [subscriptionId], references: [id])
  domain         String       @unique
  aaPanelUserId  String?      // aaPanel user ID
  aaPanelSiteId  String?      // aaPanel site ID
  ftpUsername    String?
  ftpPassword    String?
  status         WebsiteStatus @default(PENDING)
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt
  files          FileUpload[]
}

model FileUpload {
  id          String   @id @default(cuid())
  websiteId   String
  website     Website  @relation(fields: [websiteId], references: [id], onDelete: Cascade)
  filename    String
  originalName String
  mimeType    String
  size        Int      // dalam bytes
  path        String   // path di server
  uploadedAt  DateTime @default(now())
}

enum OrderStatus {
  PENDING
  PROCESSING
  COMPLETED
  FAILED
  CANCELLED
  EXPIRED
}

enum SubscriptionStatus {
  ACTIVE
  EXPIRED
  CANCELLED
  SUSPENDED
}

enum WebsiteStatus {
  PENDING
  ACTIVE
  SUSPENDED
  DELETED
}

enum PlanType {
  HOSTING
  VPS
}
