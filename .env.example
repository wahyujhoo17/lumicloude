# Environment variables template
# Copy file ini menjadi .env dan isi dengan nilai yang sesuai

# Database Configuration
DATABASE_URL="postgresql://user:password@localhost:5432/lumicloud"

# NextAuth Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=generate-with-command: openssl rand -base64 32

# App Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000

# iPaymu Configuration
# Dapatkan dari dashboard iPaymu: https://my.ipaymu.com/integration
IPAYMU_VA=your-ipaymu-va-number
IPAYMU_API_KEY=your-ipaymu-api-key
IPAYMU_ENV=sandbox  # sandbox atau production

# aaPanel Configuration
# URL aaPanel Anda (tanpa trailing slash)
AAPANEL_URL=https://your-aapanel-url.com:8888
# API Key dari aaPanel > API > Create API Key
AAPANEL_API_KEY=your-aapanel-api-key
